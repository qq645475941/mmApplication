@import './comstyles/usefull.wxss'
page{
    background-color: #fafafa;
    font-size: 28rpx;
    /* font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif; */
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}
view{
  color: #131313;
  font-size: 28rpx; 
}
input{
  font-size: 28rpx;
  width: 100%;
}
button{
  padding: 0;
  margin: 0;
  margin-left:0;
  margin-right:0;
  padding-left:0;
  padding-right:0;
  border: none;
  outline: none;
  border-radius: 0;
}
button::after {
  border: 0;
  outline:0 ;
}
image{
   vertical-align: middle; 
}
.loadEnd{
  text-align: center;
  color: #999;
  padding: 5px 0;
}
.default_bottom_btn{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  color: #fff;
  background-color: #ff606e;
  z-index: 2;
  border-radius: 0;
  font-size: 30rpx;
}
.default_btn{
  height: 88rpx;
  background-color: #ff606e;
  color: #fff;
  line-height: 88rpx;
  /* width: 640rpx; */
  margin: 0 26rpx;
  margin-top: 48rpx;
  font-size: 32rpx;
  border-radius: 3px;
}
.default_outline_btn{
  height: 88rpx;
  border:1px solid  #ff606e;
  border-radius: 3px;
  color: #ff606e;
  line-height: 88rpx;
  width: 640rpx;
  margin: 0 auto;
  margin-top: 48rpx;
  font-size: 32rpx;
  background-color: #edf1f8;
}

.version{
  width: 100%;
  position: fixed;
  bottom: 70rpx;
  font-size: 22rpx;
  color: #bdc0cb;
  text-align: center;
}


.arrow{
  display: inline-block;
  width: 16rpx;
  height: 16rpx;
  border-top: 1px solid #333;
  border-right: 1px solid #333;
  transform: rotate(45deg);
}

.trigon{
    display: inline-block;
    width: 0;
    height: 0;
    border-bottom: 10px solid #ccc;
    border-left: 10px solid transparent;
}

