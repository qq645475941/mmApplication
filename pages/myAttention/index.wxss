.list{
  padding: 20rpx;
  margin: 30rpx;
  background: #fff;
  border-radius: 10rpx;
  border: 1px solid #e7e7e7;

}
.list .list-left{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  overflow: hidden 
}
.list .list-left image{
  width: 150rpx;
  height: 150rpx;
}
.list .list-right{
  flex: 1 1;
  margin-left: 30rpx;
}
.list .list-right .right-name{
  font-size: 35rpx;
  font-weight: 600;
  margin-block: 10rpx
}
.list .list-right .right-info{
  color: #999;
}