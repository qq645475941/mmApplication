/* list */
.list{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 30rpx;
  background-color: #fff;
}
.listL{
 flex: 1;
}
.listL image{
  width: 240rpx;
  height: 200rpx;
  border-radius: 20rpx;
}
.listR{
  flex: 3;
  padding: 20rpx 20rpx 10rpx 20rpx;
  display: flex;
  align-content: space-between;
  flex-flow: wrap;
}
.listR view:first-child{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.lRBot{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}
.lRBot view{
  color: #ff606f;
}
.lRBot button{
  width: 120rpx;
  height:40rpx;
  border-radius: 20rpx;
  background-color: #ff606f;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  line-height: 40rpx;
}
.lRBot button[disabled]{
  background-color: #cccccc;
  color: #fff;
}
.time{
  color: #999999;
  line-height: 60rpx;
  text-align: left;
}