page{
  padding-top: 110rpx;
}
.header{
  height: 110rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:  0 30rpx;
  top: 0;
  position: fixed;
  width: 100%;
  box-sizing: border-box;
  z-index: 3;
  background-color: #fafafa;
