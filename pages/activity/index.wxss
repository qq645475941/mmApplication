.search image{
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
  margin-right: 16rpx;
}
.notification image{
  width: 38rpx;
  height: 40rpx;
}
.notification view{
  color: #131313;
  font-size: 20rpx;
  font-weight: bold;
}


/* 下拉菜单 */

.nav {
  position: relative;
  z-index: 99;
  display: flex;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  background: #fff;
}

.nav-son {
  display: flex;
  flex: 1;
  text-align: center;
  height: 30px;
  align-items: center;
  justify-content: center;
  font-size: 12px;
}

.borders {
  border-left: 1px solid #e6e6e6;
  border-right: 1px solid #e6e6e6;
}

.contentx {
  display: inline-block;
}

.icon {
  display: inline-block;
  border: 4px solid transparent;
  border-top: 4px solid #9b9b9b;
  margin-left: 5px;
}


.fullbg {
  position: fixed;
  top: 110rpx;
  z-index: 1;
  width: 100%;
  height: 100%;
  background: rgb(1, 1, 1);
  transition: all 0.3s;
  opacity: 0;
}

.fullopacity {
  opacity: 0.5;
}

.nav-son.active .contentx {
  color: #ff606f;
}

.nav-son.active .icon {
  border-bottom: 4px solid #ff606f;
  border-top: 0;
}

@keyframes slidown {
  from {
    transform: translateY(-100%);
    opacity: 0;
    display: none;
  }

  to {
    transform: translateY(0%);
    opacity: 1;
    display: block;
  }
}

.slidown {
  display: block;
  animation: slidown 0.2s ease-in both;
}

@keyframes slidup {
  from {
    transform: translateY(0%);
    opacity: 1;
  }

  to {
    transform: translateY(-100%);
    opacity: 0
  }
}

.slidup {
  display: none;
  animation: slidup 0.2s ease-in both;
}

.disappear {
  display: none;
}

.shaixuan {
  position: relative;
  /* overflow: hidden; */
}

.temp {
  position: absolute;
  z-index: 2;
  width: 100%;
}

.temp .on {
  color: #ff606f;
}
.on{color: #ff606f;}
.temp icon {
  float: right;
