/* pages/components/tabBar.wxss */
.customTabBar{
  width: 100%;
  height: 96rpx;
  display: flex;
  justify-content: flex-start;
  position: fixed;
  bottom: 0;
  background: #fff;
  z-index: 3;
  border-top: 1px solid #c0bfc4;
}
.tabBarItem{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.tabBarIco{
  text-align: center;
}
.tabBarIco image{
  width: 54rpx;
  height: 54rpx;
}
.tabBarText{
  text-align: center;
  color: #525252;
  font-size: 20rpx;
}