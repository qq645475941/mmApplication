page {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

swiper {
  height: 300rpx;
}

.header {
  padding: 25rpx;
}

.header-image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.header-one {
  font-size: 30rpx;
  font-weight: 700;
  font-family: sans-serif;
  margin-top: 20rpx;
}

.header-two {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 15rpx;
}

.look {
  font-size: 25rpx;
  color: #BEBEBE;
}

.collect {
  font-size: 25rpx;
  color: #BEBEBE;
  margin-left: 15rpx;
}

.attention {
  height: 30rpx;
  color: #FFF;
  font-size: 20rpx;
  line-height: 30rpx;
  border-radius: 20rpx;
  text-align: center;
  padding: 5rpx 8rpx;
  letter-spacing: 5rpx;
  background-color: #FF606F;
}

.free-price {
  font-size: 30rpx;
  font-weight: 500;
  color: red;
}

.free-join {
  font-size: 25rpx;
  font-weight: 500;
  color: gray;
}

.state-end {
  margin-left: 20rpx;
  height: 30rpx;
  color: gray;
  text-align: center;
  line-height: 30rpx;
  border-radius: 30rpx;
  font-size: 20rpx;
  letter-spacing: 2rpx;
  padding: 2rpx 10rpx;
  border: 1px solid gray;
}

.main {
  border-top: 10rpx solid #EBEBEB;
  /* margin-top: 20rpx; */
  padding: 10rpx 25rpx 0rpx;
}

.activity-item {
  width: 100%;
  height: auto;
  border: 1rpx solid red;
  border-radius: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
  margin-top: 25rpx;
}

.header-title {
  text-align: center;
}

.headline {
  color: #333;
  font-weight: 700;
  font-family: sans-serif;
}

.item-row {
  display: flex;
  align-items: center;
  margin-top: 30rpx;
}

.left-subject {
  color: #333;
  font-weight: 700;
  font-family: sans-serif;
  font-size: 25rpx;
  margin-right: 30rpx;
}

.left-subject::before {
  color: red;
  content: '|';
  font-weight: 500px;
  margin-right: 8rpx;
}

.right-content {
  color: #333;
  font-weight: 600;
  font-family: sans-serif;
  font-size: 22rpx;
}

.hoster {
  color: red;
}

.look-more {
  font-size: 30rpx;
  font-weight: 700;
  font-family: sans-serif;
  text-align: center;
  margin-top: 25rpx;
}

.footer {
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 100rpx;
  border-top: 2rpx solid #F6F6F6;
  padding: 10rpx 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  box-sizing: border-box;
}

.footer-img {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.img-text {
  color: #333;
  font-size: 25rpx;
  margin-top: 8rpx;
}

.btn {
  width: 360rpx;
  height: 60rpx;
  color: #FFFFFF;
  background-color: #FF606F;
  text-align: center;
  line-height: 60rpx;
  border-radius: 60rpx;
  font-size: 30rpx;
  letter-spacing: 5rpx;
  display: inline-block;

}